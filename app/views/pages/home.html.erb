
<!-- the list of pets  -->
<div class="container">
  <div class="row" id="cards-product">
    <% @kindergardens.each do |pet| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card">
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path kindergarden.photo, height: 300, width: 400, crop: :fill %>')"></div>
            <div class="card-description">
              <h3><%= link_to kindergarden.name, kindergarden_path(kindergarden)%></h3>
              <h4><%= kindergarden.language %></h4>
              <h4><%= kindergarden.address %></h4>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

