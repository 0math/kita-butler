<div class="container">
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
     <div class="col-sm-12">
      <h3>Add a review</h3>
        <%= simple_form_for [reservation, review] do |f| %>
          <%= f.input :rating, collection: 1..5 %>
          <%= f.input :content %>
          <%= f.submit class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

